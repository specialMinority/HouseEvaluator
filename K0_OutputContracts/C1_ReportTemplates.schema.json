{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "K0_OutputContracts/C1_ReportTemplates.schema.json",
    "title": "C1 Report Templates Contract",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "version",
        "placeholders",
        "rules"
    ],
    "properties": {
        "version": {
            "type": "string",
            "minLength": 1
        },
        "generated_at": {
            "type": "string"
        },
        "placeholders": {
            "type": "array",
            "minItems": 10,
            "items": {
                "type": "string",
                "pattern": "^\\{[a-z0-9_]+\\}$"
            }
        },
        "rules": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/templateRule"
            }
        }
    },
    "$defs": {
        "templateRule": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "id",
                "priority",
                "when",
                "summary_ko",
                "evidence_bullets_ko"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1
                },
                "priority": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 1000
                },
                "when": {
                    "type": "object",
                    "description": "JSONLogic-compatible condition object",
                    "additionalProperties": true
                },
                "summary_ko": {
                    "type": "string",
                    "minLength": 1
                },
                "summary_ja": {
                    "type": "string"
                },
                "evidence_bullets_ko": {
                    "type": "array",
                    "minItems": 0,
                    "maxItems": 10,
                    "items": {
                        "type": "string"
                    }
                },
                "risk_flag_explanations_ko": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "negotiation_suggestions_ko": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "negotiation_suggestions_ja": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "alternative_search_queries_ja": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "notes": {
                    "type": "string"
                }
            }
        }
    }
}